@model IMDB.Models.Film

@{
    ViewBag.Title = "Create Film";
}


<h1>New Film</h1>

<section>
    <div>
        @using (Html.BeginForm("Create", "Film", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary()

            <label for="name">Name</label>
            <input type="text" id="name" name="name"
                   value="@Model.Name">
            @Html.ValidationMessageFor(m => m.Name)

            <label for="genre">Genre</label>
            <input type="text" id="genre" name="genre"
                   value="@Model.Genre">
            @Html.ValidationMessageFor(m => m.Genre)

            <label for="Hero">Hero</label>
            <input type="text" id="Hero" name="Hero" value="@Model.Hero">
            @Html.ValidationMessageFor(m => m.Hero)

            <label for="Producer">Producer</label>
            <input type="text" id="Producer" name="Producer" value="@Model.Producer">
            @Html.ValidationMessageFor(m => m.Producer)

            <label for="year">Year</label>
            <input type="text" id="year" name="year"
                   value="@Model.Year">
            @Html.ValidationMessageFor(m => m.Year)

            <button type="submit" class="">Create</button>
            <button onclick="location.href='/';return false;" class="cancel">Cancel</button>
        }
    </div>
</section>
